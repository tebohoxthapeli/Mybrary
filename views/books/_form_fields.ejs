<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= book.title %>" autocomplete="off">
    </div>

    <div class="form-item">
        <label for="author">Author</label>
        <select name="author" id="author">
            <% authors.forEach(author=> { %>
                <% if (author.id===book.author) { %>
                    <option selected label="<%= author.name %>" value="<%= author.id %>">
                        <% } else { %>
                    <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
                    <% } %>
                        <% }) %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label for="publishDate">Publish date</label>
        <input type="date" id="publishDate" name="publishDate"
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">  
    </div>

    <div class="form-item">
        <label for="pageCount">Number of pages</label>
        <input type="number" min="1" id="pageCount" name="pageCount" value="<%= book.pageCount %>">    
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">      
        <label>Cover</label>
        <input type="file" id="cover" name="cover" class="filepond">
    </div>

    <div class="form-item">
        <label for="description">Description</label>
        <textarea id="description" name="description"><%= book.description %></textarea> 
    </div>
</div>